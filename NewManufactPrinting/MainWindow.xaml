<Controls:MetroWindow x:Name="MainMetroWindow" x:Class="NewManufactPrinting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewManufactPrinting"
        xmlns:converter="clr-namespace:NewManufactPrinting.Converters"
        xmlns:views="clr-namespace:NewManufactPrinting.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"      
        Background="{DynamicResource MaterialDesignPaper}"
        ResizeMode="CanResizeWithGrip"
        Title="{Binding Title}" Height="430" Width="770" Loaded="MainMetroWindow_Loaded" 
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowViewModel}}" TitleCaps="False" Closing="MainMetroWindow_Closing" PreviewKeyDown="MainMetroWindow_PreviewKeyDown" >
    <Controls:MetroWindow.Resources>
        <DataTemplate x:Key="HamburgerMenuItem" DataType="{x:Type local:HamburgerMenuIconItem}">
            <Grid Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0"
                                Content="{Binding Icon}"
                                Focusable="False"
                                Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsTabStop="False" />
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                           Text="{Binding Label}" />
            </Grid>
        </DataTemplate>

        <converter:SelectedItemToContentConverter x:Key="SelectedItemToContentConverter"/>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.DataContext>
        <StaticResource ResourceKey="mwvm"/>
    </Controls:MetroWindow.DataContext>
    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <DataGrid Visibility="Collapsed"/>
            <Grid Grid.Row="1">
                <Controls:HamburgerMenu x:Name="HamburgerMenuControl"
                                SelectedIndex="0"
                                Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                HamburgerWidth="48"
                                ItemTemplate="{StaticResource HamburgerMenuItem}"
                                OptionsItemTemplate="{StaticResource HamburgerMenuItem}"
                                PaneBackground="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                                OpenPaneLength="48" IsPaneOpen="False" >
                    <Controls:HamburgerMenu.Content>
                        <MultiBinding Converter="{StaticResource SelectedItemToContentConverter}">
                            <Binding RelativeSource="{RelativeSource Self}"
                                     Mode="OneWay"
                                     Path="SelectedItem" />
                            <Binding RelativeSource="{RelativeSource Self}"
                                     Mode="OneWay"
                                     Path="SelectedOptionsItem"/>
                        </MultiBinding>
                    </Controls:HamburgerMenu.Content>
                    <!--  Items  -->
                    <Controls:HamburgerMenu.ItemsSource>
                        <Controls:HamburgerMenuItemCollection>
                            <local:HamburgerMenuIconItem Icon="{materialDesign:PackIcon Kind=Home,Size=22}" Label="HOME" >
                                <local:HamburgerMenuIconItem.Tag>
                                    <views:Home x:Name="home_view" />
                                </local:HamburgerMenuIconItem.Tag>
                            </local:HamburgerMenuIconItem>
                            <local:HamburgerMenuIconItem Icon="{materialDesign:PackIcon Kind=Settings,Size=22}" Label="SETTINGS">
                                <local:HamburgerMenuIconItem.Tag>
                                    <views:Settings x:Name="settings_view"/>
                                </local:HamburgerMenuIconItem.Tag>
                            </local:HamburgerMenuIconItem>
                        </Controls:HamburgerMenuItemCollection>
                    </Controls:HamburgerMenu.ItemsSource>

                    <!--  Options  -->
                    <Controls:HamburgerMenu.OptionsItemsSource>
                        <Controls:HamburgerMenuItemCollection>
                            <local:HamburgerMenuIconItem Label="About" Icon="{materialDesign:PackIcon Kind=Help,Size=22}" >
                                <local:HamburgerMenuIconItem.Tag>
                                    <TextBlock Text="About" />
                                </local:HamburgerMenuIconItem.Tag>
                            </local:HamburgerMenuIconItem>
                        </Controls:HamburgerMenuItemCollection>
                    </Controls:HamburgerMenu.OptionsItemsSource>

                    <!--  Content  -->
                    <Controls:HamburgerMenu.ContentTemplate>
                        <DataTemplate>
                            <Grid x:Name="ContentGrid">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Controls:TransitioningContentControl Grid.Row="1"
                                                              Content="{Binding Tag}"
                                                              RestartTransitionOnContentChange="True"
                                                              Transition="Default" Margin="5"
                                                              Foreground="{DynamicResource MaterialDesignBody}"/>
                            </Grid>
                        </DataTemplate>
                    </Controls:HamburgerMenu.ContentTemplate>
                </Controls:HamburgerMenu>
            </Grid>
            <StatusBar Grid.Row="2" Background="{DynamicResource WindowTitleColorBrush}">
                <StatusBarItem DockPanel.Dock="Right" Margin="0,0,15,0" >
                    <TextBlock TextAlignment="Right" Text="{Binding Version}"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="{Binding ConnectState}" Foreground="{Binding ConnectStateColor}"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem Content="Barcode:" />
                <StatusBarItem Width="50" Content="{Binding SelectedBarcodeComPort}" HorizontalAlignment="Left" />
                <Separator/>
                <StatusBarItem Content="LabelPrinter:"/>
                <StatusBarItem Width="50" Content="{Binding SelectedLabelPrinterComPort}" HorizontalAlignment="Left"/>
            </StatusBar>

        </Grid>
    </materialDesign:DialogHost>
</Controls:MetroWindow>
